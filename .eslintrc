{
  "extends": ["plugin:@wordpress/eslint-plugin/recommended"],
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "requireConfigFile": false,
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": false
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },

  "globals": {
    "$": true,
    "wp": true,
    "console": true,
    "$uifm": true,
    "Foundation": true
  },
  "rules": {
    "block-scoped-var": 2,
    "camelcase": 1,
    "comma-style": [2, "last"],
    "curly": [0, "all"],
    "dot-notation": [
      2,
      {
        "allowKeywords": true
      }
    ],
    "eqeqeq": [2, "allow-null"],
    "guard-for-in": 2,
    "new-cap": 0,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-cond-assign": [2, "except-parens"],
    "no-debugger": 2,
    "no-empty": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-parens": 0,
    "no-irregular-whitespace": 2,
    "no-iterator": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-new": 2,
    "no-plusplus": 0,
    "no-proto": 2,
    "no-script-url": 2,
    "no-sequences": 2,
    "no-shadow": 1,
    "no-undef": 2,
    "no-unused-vars": 1,
    "no-with": 2,
    "quotes": 0,
    "radix": 2,
    "semi": [0, "never"],
    "strict": [1, "global"],
    "valid-typeof": 2,
    "wrap-iife": [2, "inside"]
  }
}
